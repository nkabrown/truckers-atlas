{
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web/dev-server": "^0.1.35",
    "@web/test-runner": "^0.15.0",
    "browserslist": "^4.21.4",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2.3",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lit-analyzer": "^2.0.0-pre.2",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "lit": "^2.4.1"
  },
  "lint-staged": {
    "*.{js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,yaml,md}": "prettier --write"
  },
  "scripts": {
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix --ext .js,.mjs,.ts,.html .; exit 0;",
    "format:prettier": "prettier --write .; exit 0;",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.mjs,.ts,.html .; exit 0;",
    "lint:prettier": "prettier --check .; exit 0;",
    "prepare": "husky install",
    "start": "wds --node-resolve --open src/ --watch",
    "test": "wtr test/**/*.test.js --node-resolve"
  }
}

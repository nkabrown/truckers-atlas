{
  "dependencies": {
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@web/dev-server": "^0.1.35",
    "@web/test-runner": "^0.15.1",
    "browserslist": "^4.21.5",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-compat": "^4.1.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.3.0",
    "eslint-plugin-wc": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "lit-analyzer": "^2.0.0-pre.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "typescript-lit-html-plugin": "^0.9.0",
    "wireit": "^0.9.5"
  },
  "lint-staged": {
    "*.{js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,yaml,md}": "prettier --write"
  },
  "scripts": {
    "copy": "wireit",
    "dev": "concurrently \"npm run copy --watch\" \"npm run ts --watch\" \"npm run start\" ",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --ignore-path .gitignore --fix --ext .js,.mjs,.ts,.html .; exit 0;",
    "format:prettier": "prettier --ignore-path .gitignore --write .; exit 0;",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .js,.mjs,.ts,.html .; exit 0;",
    "lint:prettier": "prettier --ignore-path .gitignore --check .; exit 0;",
    "prepare": "husky install",
    "start": "wds",
    "test": "wtr test/**/*.test.js --node-resolve",
    "ts": "wireit"
  },
  "wireit": {
    "copy": {
      "command": "copyfiles -u 1 'src/**/*.css' src/index.html lib/",
      "files": [
        "src/**/*.css",
        "src/index.html"
      ],
      "output": [
        "lib/**/*.css",
        "lib/index.html"
      ]
    },
    "ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**/*.js"
      ]
    }
  }
}

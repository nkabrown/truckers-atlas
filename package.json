{
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web/dev-server": "^0.1.34",
    "@web/test-runner": "^0.14.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lit-analyzer": "^2.0.0-pre.2",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,yml,md}": "prettier --write"
  },
  "scripts": {
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix --ext .js,.mjs,.ts,.html .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.mjs,.ts,.html .",
    "lint:prettier": "prettier --check .",
    "prepare": "husky install",
    "start": "wds --node-resolve --open src/ --watch",
    "test": "wtr test/**/*.test.js --node-resolve"
  },
  "dependencies": {
    "lit": "^2.3.0"
  }
}
